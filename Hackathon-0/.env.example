# AI Employee - Environment Variables Template
# Copy this file to .env and fill in your credentials
# NEVER commit .env to git!

# ============================================
# GMAIL API (OAuth2)
# ============================================
# Get from: https://console.cloud.google.com/
GMAIL_CLIENT_ID=your_client_id_here.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your_client_secret_here

# ============================================
# TWITTER/X API v2
# ============================================
# Get from: https://developer.twitter.com/
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_SECRET=your_access_secret
TWITTER_BEARER_TOKEN=your_bearer_token

# ============================================
# FACEBOOK GRAPH API
# ============================================
# Get from: https://developers.facebook.com/
FACEBOOK_PAGE_ID=your_page_id
FACEBOOK_PAGE_ACCESS_TOKEN=your_long_lived_token

# ============================================
# BROWSER AUTOMATION CREDENTIALS
# ============================================
# Used for initial login only (sessions are saved)
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_password

FACEBOOK_EMAIL=your_email@example.com
FACEBOOK_PASSWORD=your_password

TWITTER_EMAIL=your_email@example.com
TWITTER_PASSWORD=your_password

# ============================================
# SYSTEM SETTINGS
# ============================================
VAULT_PATH=/mnt/c/MY_EMPLOYEE
DRY_RUN=true
LOG_LEVEL=INFO

# ============================================
# RATE LIMITING
# ============================================
MAX_LINKEDIN_POSTS_PER_DAY=5
MAX_TWITTER_POSTS_PER_DAY=10
MAX_FACEBOOK_POSTS_PER_DAY=5
MAX_EMAILS_PER_HOUR=20
